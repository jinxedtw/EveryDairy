<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:GestureLock="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.activity.SecretActivity">

        <EditText
            android:id="@+id/et_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入一个密码"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_set_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置密码完成" />

        <EditText
            android:id="@+id/et_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="登录"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/bt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录" />

        <Button
            android:id="@+id/bt_request_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取天气" />

        <Button
            android:id="@+id/bt_audio_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="录音" />

        <TextView
            android:id="@+id/tv_remote_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="默认值"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_remote_config_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="默认值"
            android:textSize="20sp" />

        <com.sevenheaven.gesturelock.GestureLock
            android:id="@+id/gesture_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_60"
            GestureLock:line_normal_color="@android:color/darker_gray"
            GestureLock:line_width="2dp" />
    </LinearLayout>
</layout>