<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_clip_popup"
    android:minHeight="70dp"
    android:minWidth="160dp"
    android:paddingStart="15dp"
    android:paddingTop="10dp"
    android:paddingEnd="7dp"
    android:paddingBottom="10dp">


    <TextView
        android:id="@+id/tv_open_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/open_link"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha="0.8"
        android:maxWidth="140dp"
        android:textColor="@color/topDivider"
        android:textSize="13sp"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_open_link"
        app:layout_constraintTop_toBottomOf="@id/tv_open_link"
        tools:text="https://www.baidu.aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toEndOf="@id/tv_link"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>